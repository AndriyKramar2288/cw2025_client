<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GreetingsStep1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/greetings1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GreetingsActivity">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="match_parent"
            android:layout_height="548dp"
            android:layout_marginTop="-100dp"
            android:contentDescription="@string/greetings_app_real_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cw2025_logo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/logoBlock"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoImage">

            <TextView
                android:id="@+id/logoText"
                android:textSize="30sp"
                android:layout_marginVertical="30dp"
                app:layout_constraintHorizontal_bias="0.5"
                android:text="@string/greetings_app_real_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/logoInfo"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logoInfo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_background_curved"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@id/logoBlock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/greetings_app_desc"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/greetings_button_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/greetings_next_button_background"
            android:paddingHorizontal="20dp"
            android:text="@string/greetings_continue"
            android:textColor="@color/navbar_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoBlock" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>